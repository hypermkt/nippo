{
  "name": "nippo",
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all --parallel server build api",
    "api": "php -S localhost:8000 api/public/index.php",
    "build": "watchify -v browserify -e src/js/main.js -o public/app.js",
    "server": "http-server ./public -o -p 8080",
    "test": "karma start karma.conf.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "dependencies": {
    "axios": "^0.15.3",
    "moment": "^2.16.0",
    "vue": "^2.1.3",
    "vue-router": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "bluebird": "^3.4.6",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "http-server": "^0.9.0",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "mocha": "^3.1.2",
    "npm-run-all": "^3.1.1",
    "sinon": "^1.17.6",
    "underscore": "^1.8.3",
    "vueify": "^9.2.4",
    "watchify": "^3.7.0"
  }
}
